<div class="row">
	<!-- ジャンル検索サイドバー -->
  <%= render 'items/genre_sidebar', genres: @genres %>

	<div class="col-md-4 col-md-offset-1">
		<%= attachment_image_tag @item, :image, :fill, 350, 250, format: 'jpeg', fallback: "no_image.png" %>
	</div>
	<div class="col-md-5">
		<div class="row">
		  <h2><%= @item.name %></h2>
		  <h4><%= @item.explanation %></h4>
		  <h3>¥<%= price_tax(@item.price_nontax) %>(税込)</h3>
		</div>
		<div class="row">
			<div class="col-md-12">
			  <div class="col-md-4 col-md-offset-4">
				<%= form_for(@cart_item, url: cart_items_path) do |f| %>
				  <%= f.number_field :number, placeholder: "個数選択", min: 1, max: 10, class: "form-control" %>
				  <%= f.hidden_field :item_id, value: @item.id %>
				</div>
				<div class="col-md-4">
				  <%= f.submit "カートに入れる", class: "btn btn-primary" %>
				<% end %>
				</div>
		</div>
	</div>

</div>
