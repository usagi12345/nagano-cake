<div class="container">
	<div class="row">

		<div class="col-md-3">
			<table>
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td>
								<%= link_to genre.name, genre_path(genre) %>
							</td>
						</tr>
          <% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-9">

			<h1>商品一覧</h1>
			<span>(全<%= @items.count %>件)</span>
			<div class="row">
				<% @items.each do |item| %>
					<div class="col-md-3">
						<%= link_to item_path(item) do %>
							<%= attachment_image_tag item, :image, format: 'jpeg', size:"200x150" %>
							<p><%= item.name %></p>
						<% end %>
						<p>￥<%= item.price_nontax %>(税抜)</p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

