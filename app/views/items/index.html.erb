
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<table>
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%=link_to "ケーキ", '#' %>
						</td>
					</tr>
					<tr>
						<td>
							<%=link_to "焼き菓子", '#' %>
						</td>
					</tr>
					<tr>
						<td>
							<%=link_to "プリン", '#' %>
						</td>
					</tr>
					<tr>
						<td>
							<%=link_to "キャンディ", '#' %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-md-9">
			<h1>商品一覧</h1>
			<span>(全<%= @items.count %>件)</span>
			<div class="row">
				<% @items.each do |item| %>
					<div class="col-md-3">
						<%= link_to item_path(@item) do %>
							<%= attachment_image_tag item.iamge, :image, format: 'jpeg', size:"100x100" %>
							<p><%= item.name %></p>
						<% end %>
						<p>￥<%= item.price_nontax %>(税抜)</p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

