<div class="row">
	<!-- 上段ここから -->
	<h3><<mark>注文履歴詳細</mark></h3>
	<table>
		<tr>
			<th>購入者</th>
			<td><%= link_to "#{@order.end_user.first_name}#{@order.end_user.last_name}", admins_end_user_path(@order.end_user.id) %>
			</td>
			<th>配送先</th>
			<td>〒<%= @order.postal_code %><%= @order.address %><br>
				<%= @order.name %>
			</td>
			<th>支払い方法</th>
			<td><%= @order.payment %></td>
			<th>注文ステータス変更</th>
				<td><%= form_for(@order, url: admins_order_path) do |f| %>
					<%= f.select :order_status, options_for_select(Order.order_statuses) %>
					<%= f.submit '更新', class: "btn btn-sm" %>
					<% end %>
				</td>
		</tr>
	</table>
</div>
	<!-- 上段ここまで -->
<!-- 左下ここから -->
<div class="row">
	<table>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th>制作ステータス</th>
		</tr>
		<% @order.order_items.each do |order_item| %>
		<tr>
			<td><%= order_item.item.name %></td>
			<td><%= order_item.item.price_nontax %></td>
			<td><%= order_item.number %></td>
			<td><%= (order_item.price * order_item.number) %></td>
			<td><%= form_for order_item, url: admins_order_detail_path do |f| %>
				<%= f.label :production_status, "製作ステータス" %>
				<%= f.select :production_status, options_for_select(OrderItem.production_statuses) %>
			<%= f.submit "更新", class: "btn btn-sm" %>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>
</div>
<!-- 左下ここまで -->
	<!-- 右下のやつ -->
	<div class="row">
		<table>
			<tr>
				<th>商品合計</th>
				<td><%= total_price(@order.order_items).to_s(:delimited) %>円</td>
				<th>送料</th>
				<td><%= @order.postage %>円</td>
				<th>請求金額合計</th>
				<td><%= @order.total_price.to_s(:delimited) %>円</td>
			</tr>
		</table>
	</div>
</div>