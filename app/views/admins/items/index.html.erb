<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<h4><mark>商品一覧</mark></h4>

		<div class="text-right">
			<%= link_to "＋", new_admins_item_path, class: "btn btn-default" %>
		</div>

		</div>
	</div>
	<div class="row">
		<div class="col-md-10 col-md-offset-1", style="font-size: 18px;">
			<table class="table table-bordered" style="background: rgba(0,0,0,0.2);">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @items.each do |item| %>
					<tr>
						<td>
							<%= item.id %>
						</td>
						<td>
						<%= link_to item.name, admins_item_path(item.id) %>
					</td>
					<td>
						<%= item.price_nontax.to_s(:delimited) %>
					</td>
					<td>
						<%= item.genre.name %>
					</td>
					<td>
						<% if item.sale_status == true %>
							<P> 販売中</P>
						<% else %>
							<P> 売り切れ </P>
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="text-center">
			<%= paginate @items %>
		</div>
	</div>
</div>
