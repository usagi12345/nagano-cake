<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<h1>商品一覧</h1>
			<div class="text-right">
				<%= link_to "＋", new_admins_item_path, class: "btn btn-default" %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-10 col-md-1">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @items.each do |item| %>
					<tr>
						<td>
							<%= item.id %>
						</td>
						<td>
						<%= link_to item.name, admins_item_path(item.id) %>
					</td>
					<td>
						<%= item.price_nontax %>
					</td>
					<td>
						<%= item.genres.name %>
					</td>
					<td>
						<% if item.sale_status == true %>
							<P> 販売中</P>
						<% else %>
							<P> 売り切れ </P>
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="text-center">
			<%= paginate @items %>
		</div>
	</div>
</div>
</div>