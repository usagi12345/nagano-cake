<div class="containar">
  <div class="form-group row">
    <div class="col-md-4 col-md-offset-4">
      <h3><mark>管理者ログイン</mark></h3>
    </div>
  </div>
    <div class="form-group row">
      <div class="col-md-4 col-md-offset-4" style = "text-align: right;">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "30*30" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-4 col-md-offset-4" style = "text-align: right;">
        <label>パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password", :size => "30*30" %>
      </div>
    </div>

      <div class="form-group row">
        <div class="col-md-5 col-md-offset-5" style = "padding: 10px;">
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary btn-lg"%>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



