<div class="row">
  <div class="col-md-3 col-md-offset-1">
    <h4><mark>ショッピングカート</mark></h4>
  </div>
  <!-- destroy_all -->
  <div class="col-md-2 col-md-offset-9">
    <p class="text-right"><%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %></p>
  </div>
  <!-- カート内訳 -->
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-hover tabel-inverse">
        <tr>
          <th></th>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
        <% sum_all = 0 %>  <!-- sum_all = 合計金額 -->
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= attachment_image_tag cart_item.item, :image, :fill, 100, 100 %></td>
          <td><%= cart_item.item.name %></td>
          <td><%= price_tax(cart_item.item.price_nontax) %></td>
          <td>
            <%= form_with model: cart_item, local: true do |f| %>
              <%= f.number_field :number, value: cart_item.number, min: 1, max: 10 %>
              <%= f.submit "変更", class: "btn btn-primary" %>
            <% end %>
          </td>
          <td>  <!-- sum_item = 小計 -->
            <%= sum_item = price_tax(cart_item.item.price_nontax).to_i * cart_item.number %>
            <% sum_all += sum_item %>
          </td>
          <td>
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
        <tr>
          <td><%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %></td>
          <td></td>
          <td></td>
          <td></td>
          <td>合計金額</td>
          <td><%= sum_all %></td>
      </table>
    </div>
  </div>
  <!-- 情報入力ボタン -->
  <div class="row">
    <div class="col-md-6 col-md-offset-5">
      <p><%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %></p>
    </div>
  </div>
</div>
