<div class="row">
  <div class="col-md-12">
    <div class="col-md-10">
      <h4><mark>注文履歴一覧</mark></h4>
    </div>
  </div>
</div>
<!-- 注文履歴一覧 -->
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <div><%= order.postal_code %></div>
            <div><%= order.address %></div>
            <div><%= order.name %></div>
          </td>
          <td><%= order.total_price %></td>
          <td><%= order.order_status %></td>
          <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

