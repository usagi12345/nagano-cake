<div class="row">
  <div class="col-md-12">
    <div class="col-md-10">
      <h4><mark>注文履歴一覧</mark></h4>
    </div>
  </div>
</div>
<!-- 注文履歴一覧 -->
<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered" style="background: rgba(139,69,19,0.2);">
      <thead>
        <tr>
          <th class="text-center">注文日</th>
          <th class="text-center">配送先</th>
          <th class="text-center">注文商品</th>
          <th class="text-center">支払金額</th>
          <th class="text-center">ステータス</th>
          <th class="text-center">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <div><%= order.postal_code %></div>
            <div><%= order.address %></div>
            <div><%= order.name %></div>
          </td>
          <td>
          <% order.order_items.each do |order_item| %>
            <p><%= order_item.item.name %></p>
          <% end %>
          </td>
          <td class="text-right"><%= order.total_price.to_s(:delimited) %></td>
          <td class="text-center"><%= order.order_status %></td>
          <td class="text-center"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

