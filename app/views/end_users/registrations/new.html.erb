<h2>新規会員登録</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <label>（姓）</label>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label>（名）</label>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label>（セイ）</label>
    <%= f.label :first_name_kana %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label>（メイ）</label>
    <%= f.label :last_name_kana %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label>郵便番号（ハイフンなし）</label>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="form-group">
    <label>住所</label>
    <%= f.label :address %>
    <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="form-group">
    <label>電話番号（ハイフンなし）</label>
    <%= f.telephone_field :phone, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "end_users/shared/links" %>
