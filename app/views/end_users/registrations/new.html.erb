<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h4><mark>新規会員登録</mark></h4>
  </div>
</div>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <div class="form-group row">
        <label class="col-md-3 control-label">名前</label>
        <label class="col-md-1 control-label">(姓)</label>
        <div class="col-md-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
        </div>
        <label class="col-md-1 control-label">(名)</label>
        <div class="col-md-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <div class="form-group row">
        <label class="col-md-3 control-label">フリガナ</label>
        <label class="col-md-1 control-label">(セイ)</label>
        <div class="col-md-3">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
        </div>
        <label class="col-md-1 control-label">(メイ)</label>
        <div class="col-md-3">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <div class="form-group row">
        <label class="col-md-4 control-label">メールアドレス</label>
        <div class="col-md-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <div class="form-group row">
        <label class="col-md-4 control-label">郵便番号(ハイフンなし)</label>
        <div class="col-md-7">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <div class="form-group row">
        <label class="col-md-4 control-label">住所</label>
        <div class="col-md-7">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <div class="form-group row">
        <label class="col-md-4 control-label">電話番号(ハイフンなし)</label>
        <div class="col-md-3">
          <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <div class="form-group row">
        <label class="col-md-4 control-label">パスワード(6文字以上)</label>
        <div class="col-md-3">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <div class="form-group row">
        <label class="col-md-4 control-label">パスワード(確認用)</label>
        <div class="col-md-3">
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success center-block" %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h4><mark>既に登録済みの方</mark></h4>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p>
      <%= link_to "こちら", new_end_user_session_path %> からログインしてください。
    </p>
  </div>
</div>

