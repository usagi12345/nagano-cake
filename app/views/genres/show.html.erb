<div class="row">
  <!-- ジャンル検索サイドバー -->
  <%= render 'items/genre_sidebar', genres: @genres %>
  <!-- 商品一覧 -->
  <div class="col-md-9 col-md-offset-1">
    <h1><%= @genre.name %> 一覧</h1>
    <span>(全<%= @items.count %>件)</span>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-3">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, format: 'jpeg', size:"200x150" %>
            <p><%= item.name %></p>
          <% end %>
          <p>￥<%= item.price_nontax %>(税抜)</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

